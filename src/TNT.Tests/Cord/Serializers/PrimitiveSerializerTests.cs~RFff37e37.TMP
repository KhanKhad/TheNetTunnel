using System.IO;
using NUnit.Framework;
using TNT.Deserializers;
using TNT.Serializers;

namespace TNT.Tests.Serializers
{
    [TestFixture]
    public class PrimitiveSerializerTests
    {
        [Test]
        public void Test()
        {
            const double value = 4545.565;

            using (var result = new MemoryStream())
            {
                var primitiveSerializator = new PrimitiveSerializer<double>();
                primitiveSerializator.SerializeT(value, result);
                result.Position = 0;

                var deserializeValue = new PrimitiveDeserializer<double>().DeserializeT(result, (int)primitiveSerializator.Size);

                Assert.AreEqual(value, deserializeValue);
            }
        }
    }
}